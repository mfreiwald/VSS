package edu.hm.cs.vss;

public class Table {
	
	final Seat[] seats;
	final Fork[] forks;
	
	final int maxEatingPhilosophers;
	
	public Table(int seats) {
		this.seats = new Seat[seats];
		this.forks = new Fork[seats];
		
		maxEatingPhilosophers = seats/2;
		System.out.println(maxEatingPhilosophers);
	}
	
}
