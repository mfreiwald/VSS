package edu.hm.css.vss;
import java.util.ArrayList;


public class Data {

	private ArrayList<String> list = new ArrayList<String>();
	private final String mutex = "MUTEX";
	
	public void writeData(int threadNr, long i) {
		synchronized(mutex) {
			System.out.println("Thread "+threadNr+": "+i);
			list.add("Thread "+threadNr+": "+i);	
		}
	}
	
	public long readData() {
		synchronized(mutex) {
			if(list.size() == 0) {
				return -1;
			}
			long i = list.get(list.size()-1);
			System.out.println("Read Data "+i);
			return i;
		}
	}
	
}
