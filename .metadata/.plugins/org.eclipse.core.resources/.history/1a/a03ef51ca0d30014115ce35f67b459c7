package edu.hm.css.vss;

public class Producer extends Thread {

	final Data data;
	
	Producer(Data data) {
		this.data = data;
	}
	
	public void writeData(long nr) {
		data.writeData(nr);
	}
	
	@Override
	public void run() {
		long i = 0;
		while(true) {
			this.writeData(i);
			i++;
			try {
				sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
