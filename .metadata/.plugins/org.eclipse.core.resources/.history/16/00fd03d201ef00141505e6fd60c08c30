	public synchronized void standUp(Seat seat) {
		freeSeats.add(seat);
		this.notifyAll();
	}
	
	public synchronized void notifyAllSeats() {
		for(Seat s : this.seats) {
			synchronized(s) {
				s.notifyAll();
			}
		}
	}
