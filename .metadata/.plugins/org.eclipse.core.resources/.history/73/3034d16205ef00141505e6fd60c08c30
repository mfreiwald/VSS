package edu.hm.cs.vss;

public class Fork {

	private final int nr;
	private Boolean inUse = false;
	
	Fork(int nr) {
		this.nr = nr;
	}
	
	public synchronized boolean isInUse() {
		return inUse;
	}
	
	public void take() {
		this.inUse = true;
	}
	
	public synchronized void release() {
		this.inUse = false;
		this.notifyAll();
	}
	
	public String toString() {
		return "Fork "+nr;
	}
}
