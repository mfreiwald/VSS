package edu.hm.cs.vss;

public class Philosopher extends Thread {
	
	public enum STATE {
		WAITING, EATS, SLEEPS, MEDITATE
	};
	
	final int secToSleep = 30;
	final int secToEat = 5;
	final int secToMeditate = 15;
	
	final String name;
	int timesEating = 0;
	
	public Philosopher(int nr) {
		this.name = "Philosopher "+nr;
	}
	
	
	@Override
	public void run() {
		while(true) {
			meditate();
			eat();
			if(timesEating % 3 == 0) {
				
			}
		}
	}
	
	private void eat() {
		System.out.println(name+" is eating.");
		timesEating++;
	}
	
	private void meditate() {
		System.out.println(name+" is meditateing.");

	}
	
	private void sleep() {
		System.out.println(name+" is sleeping.");

	}
}
