package edu.hm.cs.vss;

public class Fork {

	public final int nr;
	private boolean inUse = false;
	
	public Fork(int nr) {
		this.nr = nr;
	}
	
	public boolean isInUse() {
		return inUse;
	}
	
	public synchronized boolean take() {
		if(isInUse()) {
			return false;
		} else {
			inUse = true;
			return true;
		}
	}
	
	public synchronized void release() {
		
	}
	
	public String toString() {
		return ""+nr;
	}
}
