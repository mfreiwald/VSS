package edu.hm.cs.vss;

public class Main {

	final static int PRODUCERS = 2;
	final static int CONSUMERS = 20;
	final static int PRODUCER_SLEEP = 10;
	final static int CONSUMER_SLEEP = 100;
	
	public static void main(String[] args) {
		Data data = new Data();
		
		for(int i=0; i<PRODUCERS; i++) {
			Producer pro = new Producer(i, data);
			pro.start();
		}
		
		for(int i=0; i<CONSUMERS; i++) {
			Consumer con = new Consumer(i, data);
			con.start();
		}
	}
}
