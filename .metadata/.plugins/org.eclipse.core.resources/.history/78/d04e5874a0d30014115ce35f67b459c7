package edu.hm.css.vss;
import java.util.ArrayList;


public class Data {

	private ArrayList<Long> list = new ArrayList<Long>();
	private final String mutex = "MUTEX";
	
	public void writeData(int threadNr, long i) {
		synchronized(mutex) {
			System.out.println("Write Data "+i);
			list.add(i);	
		}
	}
	
	public long readData() {
		synchronized(mutex) {
			if(list.size() == 0) {
				return -1;
			}
			long i = list.get(list.size()-1);
			System.out.println("Read Data "+i);
			return i;
		}
	}
	
}
