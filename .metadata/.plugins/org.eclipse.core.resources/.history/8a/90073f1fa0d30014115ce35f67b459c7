package edu.hm.css.vss;

public class Consumer extends Thread {

	final Data data;
	
	Consumer(Data data) {
		this.data = data;
	}
	
	public void readData() {
		data.readData();
	}
	
	@Override
	public void run() {
		while(true) {
			this.readData();
			try {
				sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
